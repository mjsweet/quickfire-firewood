---
import { Phone, Menu, X, ChevronDown } from "lucide-astro";
import { SITE_CONFIG, NAV_LINKS } from "@/lib/constants";

const currentPath = Astro.url.pathname;

function isActive(href: string): boolean {
  if (href === "/") return currentPath === "/";
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-base-100 shadow-md">
  <!-- Top bar with phone number -->
  <div class="bg-primary text-primary-content">
    <div class="container mx-auto px-4 py-2 flex justify-between items-center text-sm">
      <span class="hidden sm:block">Premium Western Ironbark Firewood</span>
      <a
        href={SITE_CONFIG.phoneLink}
        class="flex items-center gap-2 font-medium hover:text-warning transition-colors"
      >
        <Phone class="w-4 h-4" />
        <span>{SITE_CONFIG.phone}</span>
      </a>
    </div>
  </div>

  <!-- Main navigation with centred logo -->
  <nav class="container mx-auto px-4">
    <div class="flex items-center justify-between py-4 lg:py-0">
      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden btn btn-ghost btn-square"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <Menu class="w-6 h-6 menu-open-icon" />
        <X class="w-6 h-6 menu-close-icon hidden" />
      </button>

      <!-- Desktop left navigation -->
      <ul class="hidden lg:flex items-center gap-1 flex-1 justify-end pr-8">
        {
          NAV_LINKS.left.map((link) => (
            <li class="relative group">
              {link.dropdown ? (
                <>
                  <button
                    class={`flex items-center gap-1 px-4 py-6 font-medium transition-colors hover:text-accent ${
                      link.dropdown.some((d) => isActive(d.href))
                        ? "text-accent"
                        : "text-base-content"
                    }`}
                  >
                    {link.label}
                    <ChevronDown class="w-4 h-4 transition-transform group-hover:rotate-180" />
                  </button>
                  <ul class="absolute top-full left-0 bg-base-100 shadow-lg rounded-lg py-2 min-w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                    {link.dropdown.map((subLink) => (
                      <li>
                        <a
                          href={subLink.href}
                          class={`block px-4 py-2 hover:bg-base-200 transition-colors ${
                            isActive(subLink.href)
                              ? "text-accent font-medium"
                              : "text-base-content"
                          }`}
                        >
                          {subLink.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </>
              ) : (
                <a
                  href={link.href}
                  class={`block px-4 py-6 font-medium transition-colors hover:text-accent ${
                    isActive(link.href) ? "text-accent" : "text-base-content"
                  }`}
                >
                  {link.label}
                </a>
              )}
            </li>
          ))
        }
      </ul>

      <!-- Centred logo with white circle extending below header -->
      <a href="/" class="flex-shrink-0 relative z-10">
        <div class="bg-white rounded-full p-2 lg:p-4 shadow-lg relative top-1 lg:top-4">
          <img
            src="/images/logo-transparent.png"
            alt="Quickfire Firewood"
            class="h-16 lg:h-28 w-auto"
            width="112"
            height="112"
          />
        </div>
      </a>

      <!-- Desktop right navigation -->
      <ul class="hidden lg:flex items-center gap-1 flex-1 pl-8">
        {
          NAV_LINKS.right.map((link) => (
            <li>
              <a
                href={link.href}
                class={`block px-4 py-6 font-medium transition-colors hover:text-accent ${
                  isActive(link.href) ? "text-accent" : "text-base-content"
                }`}
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Mobile order button -->
      <a href="/order" class="lg:hidden btn btn-accent btn-sm">Order</a>
    </div>
  </nav>

  <!-- Mobile navigation menu -->
  <div
    id="mobile-menu"
    class="lg:hidden fixed inset-0 top-[108px] bg-base-100 z-40 transform translate-x-full transition-transform duration-300"
  >
    <nav class="container mx-auto px-4 py-6">
      <ul class="space-y-2">
        {
          NAV_LINKS.left.map((link) => (
            <li>
              {link.dropdown ? (
                <div class="mobile-dropdown">
                  <button
                    class="mobile-dropdown-btn flex items-center justify-between w-full px-4 py-3 text-lg font-medium rounded-lg hover:bg-base-200"
                    aria-expanded="false"
                  >
                    {link.label}
                    <ChevronDown class="w-5 h-5 transition-transform" />
                  </button>
                  <ul class="mobile-dropdown-content hidden pl-4 mt-1 space-y-1">
                    {link.dropdown.map((subLink) => (
                      <li>
                        <a
                          href={subLink.href}
                          class={`block px-4 py-2 rounded-lg hover:bg-base-200 ${
                            isActive(subLink.href)
                              ? "text-accent font-medium"
                              : "text-base-content"
                          }`}
                        >
                          {subLink.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ) : (
                <a
                  href={link.href}
                  class={`block px-4 py-3 text-lg font-medium rounded-lg hover:bg-base-200 ${
                    isActive(link.href) ? "text-accent" : "text-base-content"
                  }`}
                >
                  {link.label}
                </a>
              )}
            </li>
          ))
        }
        {
          NAV_LINKS.right.map((link) => (
            <li>
              <a
                href={link.href}
                class={`block px-4 py-3 text-lg font-medium rounded-lg hover:bg-base-200 ${
                  isActive(link.href) ? "text-accent" : "text-base-content"
                }`}
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>

      <div class="mt-8 space-y-4">
        <a href="/order" class="btn btn-accent btn-block">Order Now</a>
        <a
          href={SITE_CONFIG.phoneLink}
          class="btn btn-outline btn-block flex items-center gap-2"
        >
          <Phone class="w-5 h-5" />
          {SITE_CONFIG.phone}
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const openIcon = menuBtn?.querySelector(".menu-open-icon");
  const closeIcon = menuBtn?.querySelector(".menu-close-icon");

  let isMenuOpen = false;

  menuBtn?.addEventListener("click", () => {
    isMenuOpen = !isMenuOpen;

    if (isMenuOpen) {
      mobileMenu?.classList.remove("translate-x-full");
      openIcon?.classList.add("hidden");
      closeIcon?.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    } else {
      mobileMenu?.classList.add("translate-x-full");
      openIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
      document.body.style.overflow = "";
    }

    menuBtn?.setAttribute("aria-expanded", String(isMenuOpen));
  });

  // Mobile dropdown toggles
  const dropdownBtns = document.querySelectorAll(".mobile-dropdown-btn");
  dropdownBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const content = btn.nextElementSibling;
      const icon = btn.querySelector("svg");
      const isExpanded = btn.getAttribute("aria-expanded") === "true";

      btn.setAttribute("aria-expanded", String(!isExpanded));
      content?.classList.toggle("hidden");
      icon?.classList.toggle("rotate-180");
    });
  });

  // Close menu on escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && isMenuOpen) {
      menuBtn?.click();
    }
  });
</script>
