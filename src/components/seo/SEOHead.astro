---
interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
  type?: "website" | "article";
  keywords?: string[];
}

const {
  title,
  description,
  image = "/images/logo.png",
  canonicalURL,
  type = "website",
  keywords = [],
} = Astro.props;

const siteURL = Astro.site || new URL("https://quickfirewood.com.au");
const resolvedImage = new URL(image, siteURL).toString();
const resolvedCanonical = canonicalURL || Astro.url.href;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{keywords.length > 0 && <meta name="keywords" content={keywords.join(", ")} />}
<link rel="canonical" href={resolvedCanonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={resolvedImage} />
<meta property="og:site_name" content="Quickfire Firewood" />
<meta property="og:locale" content="en_AU" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={resolvedImage} />

<!-- Geo Tags -->
<meta name="geo.region" content="AU-QLD" />
<meta name="geo.placename" content="Brisbane" />
