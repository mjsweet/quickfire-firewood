---
interface Props {
  title?: string;
  image?: string;
  imageAlt?: string;
  href?: string;
  class?: string;
  hover?: boolean;
}

const {
  title,
  image,
  imageAlt = "",
  href,
  class: className = "",
  hover = true,
} = Astro.props;

const cardClasses = [
  "card bg-base-100 shadow-md border border-base-200",
  hover && "card-hover",
  className,
]
  .filter(Boolean)
  .join(" ");
---

{
  href ? (
    <a href={href} class={cardClasses}>
      {image && (
        <figure class="img-zoom">
          <img
            src={image}
            alt={imageAlt || title || ""}
            class="w-full h-48 object-cover"
            loading="lazy"
            decoding="async"
          />
        </figure>
      )}
      <div class="card-body">
        {title && <h3 class="card-title font-heading">{title}</h3>}
        <slot />
      </div>
    </a>
  ) : (
    <div class={cardClasses}>
      {image && (
        <figure class="img-zoom">
          <img
            src={image}
            alt={imageAlt || title || ""}
            class="w-full h-48 object-cover"
            loading="lazy"
            decoding="async"
          />
        </figure>
      )}
      <div class="card-body">
        {title && <h3 class="card-title font-heading">{title}</h3>}
        <slot />
      </div>
    </div>
  )
}
